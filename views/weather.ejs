  <body>
    <section class="icon" id="icon"></section>
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active " data-bs-interval="2500">
          <i class="fa-regular fa-sun fa-5x fa-spin"></i>
        </div>
        <div class="carousel-item" data-bs-interval="2500">
          <i class="fa-solid fa-cloud fa-5x fa-bounce"></i>
        </div>
        <div class="carousel-item" data-bs-interval="2500">
          <i class="fa-solid fa-cloud-bolt fa-5x fa-beat"></i>
        </div>
        <div class="carousel-item" data-bs-interval="2500">
          <i class="fa-regular fa-snowflake fa-5x fa-flip"></i>
        </div>
        <div class="carousel-item" data-bs-interval="2500">
          <i class="fa-solid fa-tornado fa-5x fa-fade"></i>
        </div>
      </div>
    </div>
    </section>

    <h1 class="h3 mb-3 font-weight-normal">What's the Weather with you?</h1>
    <p>The temperature in <%= city %> is now <%= temparature %> &#176;Celcius.</p>
    <p>The weather is now <%=  weather  %></p>
    <img src ="<%=  imageURL  %>">


    <form class="form-signin" action="/" method="post">
    <button class="w-100 btn btn-lg btn-warning btn-block" type="submit">Check another location's weather</button>
    </form>

